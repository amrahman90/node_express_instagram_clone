<!DOCTYPE html>
<html>
	<head>
		{{>head}}
	</head>

	<body>
		{{>nav}}

		<div class="container main">
			<div class="row">
				<div class="col-md-8 col-md-offset-2">
					<div class="row">
						<div class="col-md-4">
							<img class="profile_icon" src="{{user.profile_pic_url}}">

						</div>
						<div class="col-md-8">
							<h1 class="header">{{user.username}}</h1>

							<div class="row">
								<div class="col-md-3">
									<strong>{{user.edge_owner_to_timeline_media.count}}</strong> <span>Posts</span>
								</div>
								<div class="col-md-3">
									<strong>{{user.edge_followed_by.count}}</strong> <span>Followers</span>
								</div>
								<div class="col-md-3">
									<strong>{{user.edge_follow.count}}</strong> <span>Following</span>
								</div>
							</div>

							<p style="margin-top:24px">
								{{user.biography}}
							</p>
						</div>
					</div>

					<div class="row">

						{{#user.edge_owner_to_timeline_media.edges}}
						<div class="col-md-4">
							<div class="post">
								<a href="/{{@root.user.username}}/{{node.shortcode}}" ><img src="{{node.thumbnail_src}}" /></a>
							</div>
						</div>
						{{/user.edge_owner_to_timeline_media.edges}}

					</div>

				</div>
			</div>
		</div>

	</body>

</html>